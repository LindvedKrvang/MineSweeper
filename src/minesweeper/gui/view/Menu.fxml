<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minesweeper.gui.controller.MenuController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="MineSweeper">
               <font>
                  <Font name="System Bold" size="55.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handlePlayButton" prefHeight="56.0" prefWidth="352.0" style="-fx-background-radius: 25, 25, 25, 25;" text="Play">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleExitButton" prefHeight="56.0" prefWidth="352.0" style="-fx-background-radius: 25, 25, 25, 25;" text="Exit">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
